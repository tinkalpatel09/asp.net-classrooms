<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <nav class="navbar navbar-inverse" style="">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="~/Views/User/Index.cshtml" ><img src="~/Image/siteicon.png" width="10%"  /></a>
            </div>
            <ul class="nav navbar-nav navbar-right">
                @*<li>@Html.ActionLink("Rent a Car", "BookaCar", "Cars", null, new { @class = "ht" })</li>*@
                <li>@Html.ActionLink("View Our Vehicles", "viewcar", "Cars", null, new { @class = "ht" })</li>
                <li>
                    @if (Session["Customer_Id"] != null)
                    {
                        @*@Html.ActionLink("Post An Ad", "CreateAd", "User", null, new { @class = "ht" })*@

                    }
                </li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li>
                    @if (Session["Customer_Id"] == null)
                    {

                        @Html.ActionLink("Register", "Register", "Home")

                    }
                </li>
                <li>
                    @if (Session["Customer_Id"] == null)
                    {
                        @Html.ActionLink("Login", "Login", "Home", null, new { @class = "ht" })
                    }
                    else
                    {
                        <h3> @Session["FirstName"]</h3>
                        @Html.ActionLink("signout", "LogOut", "Home", null, new { @class = "ht" })
                    }

<li>
            </ul>
        </div>
    </nav>

    @RenderBody()
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>

</html>
